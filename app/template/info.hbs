<span class="header">Info</span>
<hr class="bar">
{{#ifCond infoType '===' 'buying'}}
    {{#if canBuild}}
        {{#if canBuy}}
            <span>Click to buy component.</span>
        {{else}}
            <span>You don't have enough money to buy this component.</span>
        {{/if}}
    {{else}}
        <span>You can't build here.</span>
    {{/if}}
{{else}}
    {{#ifCond infoType '===' 'tile'}}
        {{#ifCond name '!==' 'None'}}
            <span>{{name}}</span><br>
            {{#if heatProduction}} <span>Produces <span class="heatText">{{heatProduction}}</span> heat per tick.</span><br> {{/if}}
            {{#if heatAbsorption}} <span>Absorbs <span class="heatText">{{heatAbsorption}}</span> heat per tick.</span><br> {{/if}}
            {{#if heatStore}} <span>Heat: {{heatValue}}/{{maxHeat}}</span><br> {{/if}}
            {{#if lifetimeValue}} <span>Lifetime: {{lifetimeValue}}/{{maxLifetime}}</span> {{/if}}
        {{else}}
            <span>{{tileType}}</span>
        {{/ifCond}}
    {{else}}
        {{#ifCond infoType '===' 'component'}}
            <span>{{name}}</span><br>
            <span>Price: ${{price}}</span><br>
            {{#if lifetime}}<span>Lifetime: {{lifetime}} ticks.</span><br>{{/if}}
            {{#if heatProduction}} <span>Produces <span class="heatText">{{heatProduction}}</span> heat per tick.</span><br> {{/if}}
            {{#if heatAbsorption}} <span>Absorbs <span class="heatText">{{heatAbsorption}}</span> heat per tick.</span> {{/if}}
        {{else}}
            <span>Hover over tile or component to show more info.</span>
        {{/ifCond}}
    {{/ifCond}}
{{/ifCond}}
